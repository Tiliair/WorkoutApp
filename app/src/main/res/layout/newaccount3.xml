<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".CreateAccountQuizActivity">

    <TextView
        android:id="@+id/text"
        android:paddingLeft="3dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Almost Done!"
        android:layout_below="@+id/logo"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        >

    </TextView>

    <TextView
        android:id="@+id/text2"
        android:paddingLeft="3dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your date of birth!"
        android:layout_below="@+id/text"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        >

    </TextView>

    <Spinner
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/monthsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:spinnerMode="dropdown"
        >

    </Spinner>

    <Spinner
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/daySpinner"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthsSpinner"

        >
    </Spinner>

    <Spinner
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/yearSpinner"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daySpinner"
        >
    </Spinner>


    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_all_inclusive_24" />


    <Button
        android:id="@+id/nextBtnToMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Next"
        android:layout_below="@id/yearSpinner"
        android:layout_marginTop="70dp"
        >
    </Button>

    <Button
            android:id="@+id/backBtnToNewAccount2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="Back"
            android:layout_below="@id/nextBtnToMainMenu"
            android:layout_marginTop="10dp"
            >

    </Button>

</RelativeLayout>
