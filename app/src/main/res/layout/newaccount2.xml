<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".CreateAccountQuizActivity">

    <TextView
        android:id="@+id/text"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What are your current goals?"
        android:layout_below="@+id/logo"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        >

    </TextView>

    <TextView
        android:id="@+id/text2"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="These can always be changed in your profile"
        android:layout_below="@+id/text"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        >

    </TextView>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:hint="Lose Weight/Fat"
    android:textColor="@color/white"
    android:textColorHint="@color/white"
    android:textSize="15sp"
    android:backgroundTint="@color/black"
    android:padding="10dp"
    android:id="@+id/loseWeightBtn"
    android:layout_below="@id/text2"
    >
</Button>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Build Muscle"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:id="@+id/BuildMuscleBtn"
        android:layout_below="@id/loseWeightBtn">
    </Button>

<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="10dp"
android:hint="Gain Weight"
android:textColor="@color/white"
android:textColorHint="@color/white"
android:textSize="15sp"
android:backgroundTint="@color/black"
android:padding="10dp"
android:id="@+id/GainWeightBtn"
android:layout_below="@id/BuildMuscleBtn">
</Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Increase Stamina"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15sp"
        android:backgroundTint="@color/black"
        android:padding="10dp"
        android:id="@+id/IncreaseStaminaBtn"
        android:layout_below="@id/GainWeightBtn">
    </Button>

    <Button
        android:id="@+id/nextBtnToNewAccount3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Next"
        android:layout_below="@id/IncreaseStaminaBtn"
        android:layout_marginTop="120dp"
        >

    </Button>

    <Button
        android:id="@+id/backBtnToNewAccount1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Back"
        android:layout_below="@id/nextBtnToNewAccount3"
        android:layout_marginTop="10dp"
        >

    </Button>

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_all_inclusive_24" />

</RelativeLayout>
